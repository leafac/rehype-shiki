{
  "compilerOptions": {
    "rootDir": "./source/",
    "outDir": "./distribution/",

    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "strict": true
  }
}
